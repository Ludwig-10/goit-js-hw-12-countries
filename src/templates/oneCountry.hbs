{{#each this}}
<div class="search-country-text-container">
<h2 class="search-country-name">{{name}}</h2>
<p class="search-country-capital"><span class="text"> Capital:</span>{{capital}}</p>
<p class="search-country-population"><span class="text"> Population:</span>{{population}}</p>
<ul class="search-country-languages-list"><span class="text"> Languages:</span>
{{#each languages}}
<li class="search-country-languages-item">{{name}}</li>
{{/each}}
</ul>
</div>
<div class="search-country-flag-container">
    <img class="search-country-flag" src="{{flag}}" alt="flag of {{name}}">
</div>
{{/each}}


